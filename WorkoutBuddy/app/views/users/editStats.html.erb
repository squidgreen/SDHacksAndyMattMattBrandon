<% provide(:title, "Edit user statistics") %>
<h1>Update your stats!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%#= render 'shared/error_messages' %>

      <%= f.label :gender %>
      <%= f.text_field :gender, class: 'form-control' %>

      <%= f.label :weight %>
      <%= f.text_field :weight, class: 'form-control' %>

      <%= f.label :height %>
      <%= f.test_field :height, class: 'form-control' %>

      <%= f.label :experience %>
      <%= f.text_field :experience, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
